<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
            android:text="@string/open_circalar_acticity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCircular"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="open floating widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnopenfloatingwidget"
            app:layout_constraintTop_toBottomOf="@+id/btnCircular" app:layout_constraintEnd_toEndOf="@+id/btnCircular"
            app:layout_constraintStart_toStartOf="@+id/btnCircular" android:layout_marginTop="16dp"/>
    <Button
            android:text="Float action Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnFloatActionButton"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnopenfloatingwidget"
            app:layout_constraintEnd_toEndOf="@+id/btnopenfloatingwidget"
            app:layout_constraintStart_toStartOf="@+id/btnopenfloatingwidget"/>
    <Button
            android:text="Login Animation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLoginAnimation"
            app:layout_constraintEnd_toEndOf="@+id/btnFloatActionButton"
            app:layout_constraintStart_toStartOf="@+id/btnFloatActionButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFloatActionButton"/>
    <Button
            android:text="Caching Data Retrofit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRetrofitCaching"
            app:layout_constraintEnd_toEndOf="@+id/btnLoginAnimation"
            app:layout_constraintStart_toStartOf="@+id/btnLoginAnimation" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLoginAnimation"/>
    <Button
            android:text="Motion Activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="359dp"
            android:id="@+id/btnMotionActivity"
            app:layout_constraintEnd_toEndOf="@+id/btnRetrofitCaching"
            app:layout_constraintStart_toStartOf="@+id/btnRetrofitCaching"
            app:layout_constraintTop_toBottomOf="@+id/btnRetrofitCaching"/>
    <Button
            android:text="Activity Animation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnActivityAnimation"
            app:layout_constraintEnd_toEndOf="@+id/btnMotionActivity"
            app:layout_constraintStart_toStartOf="@+id/btnMotionActivity" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnMotionActivity" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Animation Activity shopping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnActivityShopping"
            app:layout_constraintEnd_toEndOf="@+id/btnActivityAnimation"
            app:layout_constraintStart_toStartOf="@+id/btnActivityAnimation" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActivityAnimation"/>
</androidx.constraintlayout.widget.ConstraintLayout>