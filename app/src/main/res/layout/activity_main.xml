<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
            android:text="@string/open_circalar_acticity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCircular"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="open floating widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnopenfloatingwidget"
            app:layout_constraintTop_toBottomOf="@+id/btnCircular" app:layout_constraintEnd_toEndOf="@+id/btnCircular"
            app:layout_constraintStart_toStartOf="@+id/btnCircular" android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>